{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "MongoSettings": {
    "ConnectionString": "YOUR_MONGO_CONNECTION_STRING",
    "DatabaseName": "YOUR_MONGO_DATABASE_NAME",
    "Collection": "YOUR_MONGO_COLLECTION"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.AzureBlobStorage"
    ],
    "WriteTo": [
      {
        "Name": "AzureBlobStorage",
        "Args": {
          "connectionString": "YOUR_AZURE_BLOB_STORAGE_CONNECTION_STRING",
          "storageContainerName": "YOUR_AZURE_BLOB_STORAGE_CONTAINER_NAME",
          "storageFileName": "{yyyy}/{MM}/{dd}/log.txt"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Api": "YOUR_IDENTITY_API_DATABASE_CONNECTION_STRING"
  }
}
